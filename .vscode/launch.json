  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "BABEL_ENV": "debug",
        "ZOROASTER_TIMEOUT": "9999999"
      },
      "console": "integratedTerminal",
      "args": [
        "test/spec/replace-stream.js",
        "-b",
        "-w"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "program": "${workspaceFolder}/src/bin/register.js",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_DEBUG": "doc"
      },
      "args": [
        "documentation",
        "-o",
        "debug.md"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App 2",
      "program": "${workspaceFolder}/src/bin/register.js",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_DEBUG": "doc"
      },
      "args": [
        "documentation/2-features/2-table-display.md",
        "-o",
        "debug.md"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
