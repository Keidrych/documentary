{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "ZOROASTER_TIMEOUT": "9999999",
        "NODE_DEBUG": "doc",
      },
      "console": "integratedTerminal",
      "args": [
        // "test/spec/bin/generate.js",
        "test/spec/mask/example.js",
        // "test/spec/Toc.js",
        // "test/spec/replace-stream/typedef-md.js",
        // "test/spec/js-replace-stream/params.js",
        // "test/spec/typedef/Type.js",
        // "test/spec/re/inner-code.js",
        // "test/spec/typedef/generate.js",
        "-a",
        "-w",
        "-t", "99999999"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_DEBUG": "doc"
      },
      "args": [
        "example/typedef-raw.js",
        "-g",
        "example/typedef.js"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App 2",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_DEBUG": "doc"
      },
      "args": [
        // "documentation/2-features/6-rules.md",
        "documentation/2-features/1-TOC-generation.md",
        "-o",
        "debug.md"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
