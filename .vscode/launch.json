{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "NODE_DEBUG": "doc",
      },
      "console": "integratedTerminal",
      "args": [
        "test/spec",
        "-a",
        "-w",
        "-t", "99999999"
      ],
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster Mask",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "NODE_DEBUG": "doc",
      },
      "console": "integratedTerminal",
      "args": [
        "test/masked",
        "-a",
        "-w",
        "-t", "99999999"
      ],
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "env": {
        "NODE_DEBUG": "doc"
      },
      "args": [
        "documentary",
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Doc",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "env": {
        "NODE_DEBUG": "doc"
      },
      "args": [
        "documentary",
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
